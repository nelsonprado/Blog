<h1>Listing comentarios</h1>

<table>
  <tr>
    <th>Autor</th>
    <th>Conteudo</th>
    <th>Post</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comentarios.each do |comentario| %>
  <tr>
    <td><%= comentario.autor %></td>
    <td><%= comentario.conteudo %></td>
    <td><%= comentario.post %></td>
    <td><%= link_to 'Exibir', comentario %></td>
    <td><%= link_to 'Editar', edit_comentario_path(comentario) %></td>
    <td><%= link_to 'Apagar', comentario, confirm: 'Tem certeza?', method: :delete %></td>
  </tr>
<% end %>
</table>

